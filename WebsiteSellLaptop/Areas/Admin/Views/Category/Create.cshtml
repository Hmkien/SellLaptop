@model Category

@{
    ViewData["Title"] = "Thêm danh mục";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-plus-circle me-2"></i>Thêm danh mục mới</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</div>

<div class="admin-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row g-3">
            <div class="col-md-8">
                <label asp-for="Name" class="form-label fw-semibold">Tên danh mục <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="SortOrder" class="form-label fw-semibold">Thứ tự sắp xếp</label>
                <input asp-for="SortOrder" class="form-control" type="number">
            </div>
            <div class="col-md-12">
                <label asp-for="ImageUrl" class="form-label fw-semibold">Ảnh danh mục (URL)</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Nhập link ảnh">
            </div>
            <div class="col-md-12">
                <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả danh mục"></textarea>
            </div>
        </div>
        <hr>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-brand"><i class="bi bi-check-lg me-1"></i>Lưu</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
        </div>
    </form>
</div>
