@model Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-info-circle me-2"></i>Chi tiết danh mục</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</div>

<div class="admin-card">
    <div class="row g-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="col-md-3">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
            </div>
        }
        <div class="col">
            <table class="table table-borderless">
                <tr><th width="180">Tên danh mục:</th><td class="fw-semibold">@Model.Name</td></tr>
                <tr><th>Slug:</th><td><code>@Model.Slug</code></td></tr>
                <tr><th>Thứ tự sắp xếp:</th><td>@Model.SortOrder</td></tr>
                <tr>
                    <th>Trạng thái:</th>
                    <td>
                        @switch (Model.Status)
                        {
                            case StatusEntity.Approved: <span class="badge-status approved">Đã duyệt</span> break;
                            case StatusEntity.Pending: <span class="badge-status pending">Chờ duyệt</span> break;
                            case StatusEntity.Rejected: <span class="badge-status rejected">Hủy duyệt</span> break;
                            case StatusEntity.Draft: <span class="badge-status draft">Nháp</span> break;
                        }
                    </td>
                </tr>
                <tr><th>Ngày tạo:</th><td>@Model.Created.ToString("dd/MM/yyyy HH:mm")</td></tr>
                <tr><th>Cập nhật lần cuối:</th><td>@Model.LastModified.ToString("dd/MM/yyyy HH:mm")</td></tr>
                <tr><th>Mô tả:</th><td>@(Model.Description ?? "—")</td></tr>
            </table>
        </div>
    </div>
</div>
