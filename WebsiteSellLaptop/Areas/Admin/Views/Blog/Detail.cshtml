@model Blog

@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-newspaper me-2"></i>Chi tiết bài viết</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</div>

<div class="row g-4">
    @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
    {
        <div class="col-md-4">
            <div class="admin-card text-center">
                <img src="@Model.ThumbnailUrl" alt="@Model.Title" class="img-fluid rounded" style="max-height: 250px; object-fit: cover;">
            </div>
        </div>
    }
    <div class="col">
        <div class="admin-card">
            <h5 class="fw-bold mb-3">@Model.Title</h5>
            <table class="table table-borderless">
                <tr><th width="160">Slug:</th><td><code>@Model.Slug</code></td></tr>
                <tr><th>Chuyên mục:</th><td>@(Model.Category ?? "—")</td></tr>
                <tr><th>Lượt xem:</th><td>@Model.ViewCount</td></tr>
                <tr>
                    <th>Trạng thái:</th>
                    <td>
                        @switch (Model.Status)
                        {
                            case StatusEntity.Approved: <span class="badge-status approved">Đã duyệt</span> break;
                            case StatusEntity.Pending: <span class="badge-status pending">Chờ duyệt</span> break;
                            case StatusEntity.Rejected: <span class="badge-status rejected">Hủy duyệt</span> break;
                            case StatusEntity.Draft: <span class="badge-status draft">Nháp</span> break;
                        }
                    </td>
                </tr>
                <tr><th>Ngày tạo:</th><td>@Model.Created.ToString("dd/MM/yyyy HH:mm")</td></tr>
                <tr><th>Cập nhật:</th><td>@Model.LastModified.ToString("dd/MM/yyyy HH:mm")</td></tr>
            </table>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Summary))
{
    <div class="admin-card mt-3">
        <h6 class="fw-bold mb-2">Tóm tắt</h6>
        <p class="text-muted">@Model.Summary</p>
    </div>
}
@if (!string.IsNullOrEmpty(Model.Content))
{
    <div class="admin-card mt-3">
        <h6 class="fw-bold mb-2">Nội dung</h6>
        <div>@Html.Raw(Model.Content)</div>
    </div>
}
