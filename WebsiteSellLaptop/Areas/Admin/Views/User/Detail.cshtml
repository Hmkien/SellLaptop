@model AppUser
@using WebsiteSellLaptop.Models.Enums
@{
    ViewData["Title"] = "Chi tiết người dùng";
    var roles = ViewBag.Roles as IList<string> ?? new List<string>();
    var orders = ViewBag.Orders as List<Order> ?? new List<Order>();
    var isLocked = Model.LockoutEnd != null && Model.LockoutEnd > DateTimeOffset.Now;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1"><i class="bi bi-person-circle me-2"></i>Chi tiết người dùng</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Người dùng</a></li>
                <li class="breadcrumb-item active">@Model.FullName</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="bi bi-person-badge me-2"></i>Thông tin cá nhân</h5>
            </div>
            <div class="p-4 text-center">
                <div class="mx-auto mb-3" style="width:80px;height:80px;border-radius:50%;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);display:flex;align-items:center;justify-content:center;color:#fff;font-size:32px;font-weight:700">
                    @Model.FullName.Substring(0, 1).ToUpper()
                </div>
                <h5 class="fw-bold mb-1">@Model.FullName</h5>
                <p class="text-muted mb-2">@Model.Email</p>
                @if (roles.Contains("Admin"))
                {
                    <span class="badge-status" style="background:#fef3c7;color:#d97706"><i class="bi bi-star-fill me-1"></i>Admin</span>
                }
                else
                {
                    <span class="badge-status" style="background:#e0f2fe;color:#0284c7"><i class="bi bi-person-fill me-1"></i>User</span>
                }
                @if (isLocked)
                {
                    <span class="badge-status badge-rejected ms-1"><i class="bi bi-lock-fill me-1"></i>Đã khóa</span>
                }
                else
                {
                    <span class="badge-status badge-approved ms-1"><i class="bi bi-unlock-fill me-1"></i>Hoạt động</span>
                }
            </div>
        </div>

        <div class="admin-card mt-3">
            <div class="p-4">
                <div class="mb-3">
                    <label class="text-muted small fw-semibold">Email</label>
                    <div class="fw-semibold">@Model.Email</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted small fw-semibold">Số điện thoại</label>
                    <div class="fw-semibold">@(Model.PhoneNumber ?? "Chưa cập nhật")</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted small fw-semibold">Địa chỉ</label>
                    <div class="fw-semibold">@(Model.Address ?? "Chưa cập nhật")</div>
                </div>
                <div class="mb-3">
                    <label class="text-muted small fw-semibold">Email xác thực</label>
                    <div>
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge-status badge-approved"><i class="bi bi-check-circle me-1"></i>Đã xác thực</span>
                        }
                        else
                        {
                            <span class="badge-status badge-pending"><i class="bi bi-clock me-1"></i>Chưa xác thực</span>
                        }
                    </div>
                </div>
                <div class="mb-0">
                    <label class="text-muted small fw-semibold">Ngày tạo</label>
                    <div class="fw-semibold">@Model.Created.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5><i class="bi bi-receipt me-2"></i>Lịch sử đơn hàng (@orders.Count)</h5>
            </div>
            <div class="admin-card-body">
                @if (orders.Count == 0)
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size:48px"></i>
                        <p class="mt-3">Chưa có đơn hàng nào</p>
                    </div>
                }
                else
                {
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in orders)
                            {
                                <tr>
                                    <td><a asp-action="Detail" asp-controller="Order" asp-route-id="@order.Id" class="record-title">@order.OrderCode</a></td>
                                    <td class="small">@order.Created.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-semibold">@order.TotalAmount.ToString("N0") đ</td>
                                    <td>
                                        @switch (order.OrderStatus)
                                        {
                                            case OrderStatus.Pending: <span class="badge-status badge-pending"><i class="bi bi-clock me-1"></i>Chờ xử lý</span> break;
                                            case OrderStatus.Confirmed: <span class="badge-status" style="background:#dbeafe;color:#1e40af"><i class="bi bi-check-circle me-1"></i>Đã xác nhận</span> break;
                                            case OrderStatus.Shipping: <span class="badge-status" style="background:#e0e7ff;color:#4f46e5"><i class="bi bi-truck me-1"></i>Đang giao</span> break;
                                            case OrderStatus.Completed: <span class="badge-status badge-approved"><i class="bi bi-check-circle me-1"></i>Hoàn thành</span> break;
                                            case OrderStatus.Cancelled: <span class="badge-status badge-rejected"><i class="bi bi-x-circle me-1"></i>Đã hủy</span> break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-controller="Order" asp-route-id="@order.Id" class="action-icon action-edit" title="Xem chi tiết">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <div class="row g-3 mt-2">
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon" style="background:#dcfce7;color:#16a34a"><i class="bi bi-receipt"></i></div>
                    <div class="stat-info">
                        <div class="stat-value">@orders.Count</div>
                        <div class="stat-label">Tổng đơn hàng</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon" style="background:#fef3c7;color:#d97706"><i class="bi bi-currency-dollar"></i></div>
                    <div class="stat-info">
                        <div class="stat-value">@orders.Where(o => o.OrderStatus == OrderStatus.Completed).Sum(o => o.TotalAmount).ToString("N0")</div>
                        <div class="stat-label">Đã mua (VNĐ)</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon" style="background:#e0e7ff;color:#4f46e5"><i class="bi bi-clock-history"></i></div>
                    <div class="stat-info">
                        <div class="stat-value">@orders.Where(o => o.OrderStatus == OrderStatus.Pending).Count()</div>
                        <div class="stat-label">Đang chờ</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
