@model Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-laptop me-2"></i>Chi tiết sản phẩm</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="admin-card text-center">
            @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
            {
                <img src="@Model.ThumbnailUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;">
            }
            else
            {
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                </div>
            }
            <div class="mt-3">
                <span class="fs-4 fw-bold text-danger">@Model.Price.ToString("N0")đ</span>
                @if (Model.DiscountPrice.HasValue && Model.DiscountPrice > 0)
                {
                    <br><span class="text-decoration-line-through text-muted">@Model.DiscountPrice.Value.ToString("N0")đ</span>
                }
            </div>
            <div class="mt-2">
                @switch (Model.Status)
                {
                    case StatusEntity.Approved: <span class="badge-status approved">Đã duyệt</span> break;
                    case StatusEntity.Pending: <span class="badge-status pending">Chờ duyệt</span> break;
                    case StatusEntity.Rejected: <span class="badge-status rejected">Hủy duyệt</span> break;
                    case StatusEntity.Draft: <span class="badge-status draft">Nháp</span> break;
                }
                @if (Model.IsFeatured) { <span class="badge bg-warning bg-opacity-10 text-warning ms-1"><i class="bi bi-star-fill me-1"></i>Nổi bật</span> }
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="admin-card">
            <h5 class="fw-bold mb-3">@Model.Name</h5>
            <table class="table table-borderless">
                <tr><th width="160">Danh mục:</th><td>@(Model.Category?.Name ?? "—")</td></tr>
                <tr><th>Thương hiệu:</th><td>@(Model.Brand?.Name ?? "—")</td></tr>
                <tr><th>Slug:</th><td><code>@Model.Slug</code></td></tr>
                <tr><th>Kho:</th><td><span class="badge bg-@(Model.StockQuantity > 0 ? "success" : "danger")">@Model.StockQuantity sản phẩm</span></td></tr>
                <tr><th>Ngày tạo:</th><td>@Model.Created.ToString("dd/MM/yyyy HH:mm")</td></tr>
                <tr><th>Cập nhật:</th><td>@Model.LastModified.ToString("dd/MM/yyyy HH:mm")</td></tr>
            </table>
        </div>

        <div class="admin-card mt-3">
            <h6 class="fw-bold text-primary mb-3"><i class="bi bi-cpu me-1"></i>Cấu hình chi tiết</h6>
            <div class="row g-3">
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>CPU:</strong> @(Model.CPU ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>RAM:</strong> @(Model.RAM ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>Ổ cứng:</strong> @(Model.Storage ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>Màn hình:</strong> @(Model.Screen ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>GPU:</strong> @(Model.GPU ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>Pin:</strong> @(Model.Battery ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>Trọng lượng:</strong> @(Model.Weight ?? "—")</div></div>
                <div class="col-md-6"><div class="p-3 bg-light rounded"><strong>Hệ điều hành:</strong> @(Model.OS ?? "—")</div></div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ShortDescription))
        {
            <div class="admin-card mt-3">
                <h6 class="fw-bold mb-2">Mô tả ngắn</h6>
                <p class="text-muted">@Model.ShortDescription</p>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="admin-card mt-3">
                <h6 class="fw-bold mb-2">Mô tả chi tiết</h6>
                <div>@Html.Raw(Model.Description)</div>
            </div>
        }
    </div>
</div>
