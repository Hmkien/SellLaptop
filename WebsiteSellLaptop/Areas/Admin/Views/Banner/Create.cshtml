@model Banner

@{
    ViewData["Title"] = "Thêm banner";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-plus-circle me-2"></i>Thêm banner mới</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại</a>
</div>

<div class="admin-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row g-3">
            <div class="col-md-6"><label asp-for="Title" class="form-label fw-semibold">Tiêu đề <span class="text-danger">*</span></label><input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề"><span asp-validation-for="Title" class="text-danger"></span></div>
            <div class="col-md-6"><label asp-for="SubTitle" class="form-label fw-semibold">Phụ đề</label><input asp-for="SubTitle" class="form-control" placeholder="Nhập phụ đề"></div>
            <div class="col-md-6"><label asp-for="ImageUrl" class="form-label fw-semibold">Ảnh (URL)</label><input asp-for="ImageUrl" class="form-control" placeholder="Nhập link ảnh"></div>
            <div class="col-md-3"><label asp-for="LinkUrl" class="form-label fw-semibold">Link</label><input asp-for="LinkUrl" class="form-control" placeholder="https://..."></div>
            <div class="col-md-3"><label asp-for="SortOrder" class="form-label fw-semibold">Thứ tự</label><input asp-for="SortOrder" class="form-control" type="number"></div>
        </div>
        <hr>
        <div class="d-flex gap-2"><button type="submit" class="btn btn-brand"><i class="bi bi-check-lg me-1"></i>Lưu</button><a asp-action="Index" class="btn btn-outline-secondary">Hủy</a></div>
    </form>
</div>
